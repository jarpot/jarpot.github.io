{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "mine页面",
				"enablePullDownRefresh": true,
				"backgroundColor":"#ff5500",
				"h5":{
					"titleNView":{
						"backgroundColor":"#ff5500",
						"titleColor":"#ffffff"
					}
				}
				
			}
		},{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		}
		
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"topWindow": {
		"path": "/pages/responsive/top-window.vue",
		"style": {
			"height": "44px"
		},
		"matchMedia": {
			"maxWidth": 768 //生效条件，当窗口宽度大于768px时显示
		}
	},
	"leftWindow": {
	    "path": "/pages/responsive/left-window.vue", // 指定 leftWindow 页面文件
	    "style": {
	      "width": "300px"
	    }
	  },
	"maxWidth":300
}
