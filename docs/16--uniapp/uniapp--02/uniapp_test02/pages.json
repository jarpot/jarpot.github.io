{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app",
				"h5": {
					"titleNView": {
						"backgroundColor": "#ff55ff"
					}
				},
				"navigationBarBackgroundColor": "#ffaa00",
				"app-plus": {
					"titleNView": {
						"backgroundColor": "#4CD964"
					}
				},
				"enablePullDownRefresh": true,
				"topWindow": true,
				"leftWindow": true,
				"rightWindow": true
			}
		}, {
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false,
				"topWindow": false,
				"leftWindow": false,
				"rightWindow": false
			}
		}, {
			"path": "pages/car/car",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}
	    ,{
            "path" : "pages/list/list",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"topWindow": {
		"path": "/pages/responsive/top-window.vue", // 指定 topWindow 页面文件
		"style": {
			"height": "44px"
		}
	},
	"leftWindow": {
		"path": "/pages/responsive/left-window.vue", // 指定 leftWindow 页面文件
		"style": {
			"width": "300px"
		},
		"matchMedia": {
			"minWidth": 800 //生效条件，当窗口宽度大于768px时显示
		}
	},
	
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#3cc51f",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"height": "50px",
		"fontSize": "10px",
		"iconWidth": "24px",
		"spacing": "3px",
		"list": [{
				"pagePath": "pages/index/index",
				"text": "首页"
			}, {
				"pagePath": "pages/car/car",
				"text": "购物车"
			},
			{
				"pagePath": "pages/mine/mine",
				"text": "我的"
			}
		],
		"midButton": {
			"width": "80px",
			"height": "50px",
			"text": "文字",
			"iconPath": "static/image/midButton_iconPath.png",
			"iconWidth": "24px",
			"backgroundImage": "static/image/midButton_backgroundImage.png"
		}
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 1, //当前激活的模式（list 的索引项）
		"list": [{
				"name": "index", //模式名称
				"path": "pages/index/index", //启动页面，必选
				"query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
			},
			{
				"name": "mine",
				"path": "pages/mine/mine"
			}
		]
	}
}
